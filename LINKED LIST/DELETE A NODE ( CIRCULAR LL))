/*
class Node {
    int data;
    Node next;

    Node(int x) {
        data = x;
        next = null;
    }
}
*/

class Solution {
    Node deleteNode(Node head, int key) {
        if(head == null){
            return head;
        }
        if(head.data == key){
            if(head.next == head){
                return null;
            }
            Node cur = head;
            while(cur.next!=head){
                cur = cur.next;
            }
            head = head.next;
            cur.next = head;
            return head;
        }
        Node prev = null;
        Node cur = head;
        while(cur.next!=head){
            if(cur.data == key){
                break;
            }
            prev = cur;
            cur = cur.next;
        }
        if (cur.data == key) {
            prev.next = cur.next;
        }

        return head;
    }
}
